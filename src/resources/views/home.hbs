            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a class="text-decoration-none" href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>

                    <p>{{this.price}}$</p>
